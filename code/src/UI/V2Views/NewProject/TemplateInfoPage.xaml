<Page x:Class="Microsoft.Templates.UI.V2Views.NewProject.TemplateInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Microsoft.Templates.UI.V2Views.NewProject"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TemplateInfoPage">
    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Microsoft.Templates.UI;component/V2Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="{StaticResource Margin_L_LeftTop}">
            <Hyperlink Style="{StaticResource WtsHyperlink}" Command="{Binding GoBackCommand}">
                <TextBlock Text="Back" Style="{StaticResource WtsTextBlockHyperlink}" />
            </Hyperlink>
        </TextBlock>
        <Viewbox Grid.Row="1" StretchDirection="DownOnly" Margin="{StaticResource Margin_L_LeftTopRightBottom}" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image Source="/Microsoft.Templates.UI;component/Assets/Detail.png" />
        </Viewbox>
    </Grid>
</Page>
