<Page x:Class="Microsoft.Templates.UI.V2Views.NewItem.ChangesSummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Microsoft.Templates.UI;component/V2Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Page.Resources>

    <Grid Style="{StaticResource WtsGridMainPage}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="29*" />
        </Grid.ColumnDefinitions>
        <ContentPresenter
            Content="{Binding ChangesSummary.Selected}"
            ContentTemplate="{StaticResource WtsDataTemplateChangesSummaryDetailTemplate}" />
        <Grid Grid.Column="1" Style="{StaticResource WtsGridSectionDividerVertical}" />
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl
                ItemsSource="{Binding ChangesSummary.FileGroups}"
                ItemTemplate="{StaticResource WtsNewItemFileGroup}" />
        </ScrollViewer>
    </Grid>

</Page>
