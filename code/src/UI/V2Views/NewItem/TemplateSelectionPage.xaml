<Page x:Class="Microsoft.Templates.UI.V2Views.NewItem.TemplateSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:strings="clr-namespace:Microsoft.Templates.UI.V2Resources"
      xmlns:extensions="clr-namespace:Microsoft.Templates.UI.V2Extensions"
      xmlns:converters="clr-namespace:Microsoft.Templates.UI.V2Converters"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Microsoft.Templates.UI;component/V2Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:HasItemsVisibilityConverter x:Key="HasItemsVisibilityConverter" />
            <converters:SavedTemplateGridConverter x:Key="SavedTemplateGridConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid Style="{StaticResource WtsGridMainPage}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="29*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Text="{x:Static strings:StringRes.TemplateSelectionTitle}"
                Margin="{StaticResource Margin_L_LeftRight_M2_Top}"
                Style="{StaticResource WtsTextBlockSectionTitle}" />
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
                <ItemsControl
                    Focusable="False"
                    ItemsSource="{Binding Groups}"
                    ItemTemplate="{StaticResource WtsNewItemGroupTemplatePageFeature}" />
            </ScrollViewer>
        </Grid>
        <Grid Grid.Column="1" Style="{StaticResource WtsGridSectionDividerVertical}" />
        <StackPanel Grid.Column="2">
            <TextBlock
                Style="{StaticResource WtsTextBlockSectionTitle}"
                Margin="{StaticResource Margin_M2_LeftTopRight}"
                Text="{x:Static strings:StringRes.NewItemTemplateDetailsTitle}" />
            <TextBlock
                Text="{x:Static strings:StringRes.NewItemTemplateDetailsNameSectionTitle}"
                Style="{StaticResource WtsTextBlockSubSectionTitle}"
                Margin="{StaticResource Margin_M2_LeftRight_L_Top}" />
            <Grid>
                <Grid Style="{Binding HasErrors, Converter={StaticResource SavedTemplateGridConverter}}"/>
                <TextBox
                    Style="{StaticResource WtsTextBoxStyle}"
                    Text="{Binding Name, Mode=OneWay}"
                    Margin="{StaticResource Margin_M2_LeftRight_M_TopBottom}"
                    IsEnabled="{Binding NameEditable}"
                    extensions:TextBoxExtensions.TextChangedCommand="{Binding TextChangedCommand}" />
                    <!--
                    extensions:TextBoxExtensions.IsFocused="{Binding IsFocused}"            
                    extensions:TextBoxExtensions.LostKeyboardFocusCommand="{Binding LostKeyboardFocusCommand}"
                    -->
            </Grid>

            <StackPanel Visibility="{Binding Dependencies, Converter={StaticResource HasItemsVisibilityConverter}}">
                <TextBlock
                    Style="{StaticResource WtsTextBlockSubSectionTitle}"
                    Margin="{StaticResource Margin_M2_LeftRight_L_Top}"
                    Text="{x:Static strings:StringRes.NewItemTemplateDetailsDependenciesSectionTitle}" />
                <ItemsControl
                    Style="{StaticResource WtsItemsControl}"
                    ItemsSource="{Binding Dependencies}"
                    Margin="{StaticResource Margin_M2_LeftRight_S_TopBottom}"
                    ItemTemplate="{StaticResource WtsItemTemplateDependency}" />
            </StackPanel>

            <StackPanel Visibility="{Binding Licenses, Converter={StaticResource HasItemsVisibilityConverter}}">
                <TextBlock
                    Style="{StaticResource WtsTextBlockSubSectionTitle}"
                    Margin="{StaticResource Margin_M2_LeftRight_L_Top}"
                    Text="{x:Static strings:StringRes.NewItemTemplateDetailsLicensesSectionTitle}" />
                <ItemsControl
                    Style="{StaticResource WtsItemsControl}"
                    ItemsSource="{Binding Licenses}"
                    Margin="{StaticResource Margin_M2_LeftRight_S_TopBottom}"
                    ItemTemplate="{StaticResource WtsItemTemplateLicense}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
